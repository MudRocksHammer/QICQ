    background-color: rgb(22,22,22);
    background-image: url(:/resource/common/full_screen_press.png);
    background-repeat: no-repeat;
    background-position: center;
}

#close_btn{
    background-color: rgb(22,22,22);
    background-image: url(:/resource/common/ic_close_white.png);
    background-repeat: no-repeat;
    background-position: center;
}

