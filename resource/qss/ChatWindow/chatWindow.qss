    font-family: SimHei;
}

#ChatWidget{
    background-color: rgb(22,22,22);
}

#return_btn{
    background-image: url(:/resource/common/arrow_down.png);
    background-position: center;
    background-repeat: no-repeat;
    background-color: rgb(22,22,22);
}

#mini_btn{
    background-color: rgb(22,22,22);
    background-image: url(:/resource/common/ic_min_white.png);
    background-repeat: no-repeat;
    background-position: center;
}

#mini_btn:pressed{
    background-color: rgb(22,22,22);
    background-image: url(:/resource/common/ic_min.png);
    background-repeat: no-repeat;
    background-position: center;
}

#max_btn{
    background-color: rgb(22,22,22);
